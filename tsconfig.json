{
  "compilerOptions": {
    "extends": "@tsconfig/react-native/tsconfig.json",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "target": "ES2015",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}
